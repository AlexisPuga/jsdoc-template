{
	"opts": {
		"readme": "./README.md",
		"template": "../",
		"destination": "demo",
		"recurse": true
	},
	"source": {
		"include": ["examples"]
	},
	"templates": {
		"default": {
			"staticFiles": {
				"include": ["files"]
			}
		},
		"custom": {
			"siteURL": "https://github.com/AlexisPuga/jsdoc-template",
			"tags": {
				"body": [
					"<style>#npm-badge img{display:table}</style>"
				],
				"footer": [
					"<p><b>THIS IS A DEMO</b>: All content was generated with examples taken from the <a href='https://jsdoc.app' rel='noopener nofollow'>JSDoc page.</a></p>"
				]
			}
		}
	}
}
